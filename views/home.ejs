
<%- include('partials/header.ejs') %>

<div class="user-dashboard">
    <h2>Welcome <%= user %>!</h2>

    <div class="dashboard-buttons">
      <a href="/blog/compose" class="dashboard-button">New Blog!</a>
      <a href="/logout" class="dashboard-button">Logout</a>
    </div>
    <hr class="separator">

    <% if(posts.length>0){%>
        
      <% posts.forEach((post)=>{ %>
          <div class="blog-post">
                <h2><%= post.title %></h2>
                  <p><%- post.content.substring(0,150) %></p>
                  <a href="/blog/posts/<%= post._id %>" class="read-more">Read More</a>
          </div> 
      <% }) %>
    <% }else{ %>
          <h5 style="text-align: center;">Create new blogüìù!</h5>
    <% } %>
</div>

<%- include('partials/footer.ejs') %>