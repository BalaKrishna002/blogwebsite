
<%- include('partials/header.ejs') %>

<div class="container mt-5">
    <div class="user">
        <h2 >Hi <%= user %>!</h2>
        <a class="btn btn-primary " href="/blog/compose" role="button" >New Blog!</a>
        <a class="btn btn-primary " href="/logout" role="button" >Logout</a>
    </div>
    
    <div class="container mt-5">
        
        <hr>
        <% if(posts.length>0){%>
        
            <% posts.forEach((post)=>{ %>
                <div class="post">
                    <div class="Title">
                        <h2><%= post.title %></h2>
                    </div>
                    <hr class="all-posts">
                    <div class="Description">
                        <p><%- post.content.substring(0,120)+" ..." %>
                            <a href="/blog/posts/<%= post._id %>">Read More</a>
                        </p>
                    </div>
                </div>
                <br>
                
            <% }) %>
        <% }else{ %>
            <h5 style="text-align: center;">Create new blogüìù!</h5>
        <% } %>
     </div>
    
</div>

<%- include('partials/footer.ejs') %>