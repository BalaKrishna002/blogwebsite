
<%- include('partials/header.ejs') %>


<div class="container mt-5">
    <div class="user">
        <h2><%= author.fullname %>!</h2>
        <h6>blogs 📝</h6>
    </div>
    
    <div class="container mt-5">

        <% if(posts.length>0){%>
            <% posts.forEach((post)=>{ %>
                <hr>
                <div class="Title">
                    <h2><%= post.title %></h2>
                </div>
                <hr class="all-blogs">
                <div class="Description">
                    <p><%- post.content.substring(0,120)+" ..." %>
                        <a href="/search/posts/<%= post._id %>">Read More</a>
                    </p>
                </div>
                
            <% }) %>
        <% }else{ %>
            <hr>
            <h5>User had not published any blogs!</h5>
        <% } %>
     </div>
    
</div>

<%- include('partials/footer.ejs') %>