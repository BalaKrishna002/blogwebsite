
<%- include('partials/header.ejs') %>


<div class="user-dashboard">
    <h2><%= author.fullname %>!</h2>
    <h4>blogs 📝</h4>

    <hr class="separator">

    <% if(posts.length>0){%>
        
      <% posts.forEach((post)=>{ %>
          <div class="blog-post">
                <h2><%= post.title %></h2>
                  <p><%- post.content.substring(0,150) %></p>
                  <a href="/search/posts/<%= post._id %>" role="button" class="read-more">Read More</a>
          </div> 
      <% }) %>
    <% }else{ %>
          <h5 style="text-align: center;">User had not published any blogs!</h5>
    <% } %>
   </div>

<%- include('partials/footer.ejs') %>