
<%- include('partials/header.ejs') %>


<div class="container mt-5">
    <div class="user">
        <h2><%= author.fullname %>!</h2>
        <h6>blogs üìù</h6>
        <hr>
    </div>
    
    <div class="container mt-5">

        <% if(posts.length>0){%>
            <% posts.forEach((post)=>{ %>
                <div class="post">
                    <div class="Title">
                        <h2><%= post.title %></h2>
                        <hr class="all-posts">
                    </div>

                    <div class="Description">
                        <p><%- post.content.substring(0,120)+" ..." %>
                            <a href="/search/posts/<%= post._id %>">Read More</a>
                        </p>
                    </div>
                </div>
                <br>
                
            <% }) %>
        <% }else{ %>
            <h5>User had not published any blogs!</h5>
        <% } %>
     </div>
    
</div>

<%- include('partials/footer.ejs') %>