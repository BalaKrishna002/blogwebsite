<%- include('partials/header') %>

<div class="container mt-5 post auth">
  <h2>Login</h2>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/auth/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username" required autofocus placeholder="Email">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" required autofocus placeholder="Password">
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
          </form><br>
          <p>Don't have an account? <a href="/auth/register">Register</a></p>
        </div>
      </div>
    </div>

