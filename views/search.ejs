<%- include('partials/header.ejs') %>

<div class="container mt-5">
    <span>results for <%= search %>...</span>

    <% if(posts.length>0){%>
    
        <% posts.forEach((post)=>{ %>
            <hr>
            <div class="Title">
                <h3><%= post.title %></h3>
            </div>
            <div class="Description">
                <p><%- post.content.substring(0,100)+" ..." %>
                    <a href="/search/posts/<%= post._id %>">Read More</a>
                </p>
            </div>
            
        <% }) %>
    <% }else{ %>
        <hr>
        <h2 style="padding: auto;">No results found...</h2>
    <% } %>
 </div>

<%- include('partials/footer.ejs') %>